<form class="form"
      name="form"
      novalidate>

  <h2 class="h4">Log in to your account</h2>

  <div class="form-group">
    {{> atoms-label( label: "Username*", for: "username")}}
    {{> atoms-textinput(type:"text", name: "username",  placeholder: "" )}}
  </div>

  <div class="form-group">
    {{> atoms-label( label: "Password*", for: "password")}}
    {{> atoms-textinput(type:"password", name: "password",  placeholder: "" )}}
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i>Log In</button>
  </div>
</form>


