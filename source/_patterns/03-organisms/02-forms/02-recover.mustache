<form class="form"
      name="form"
      novalidate>

  <h2 class="h2">Recover your password</h2>

  <div class="form-group">
    {{> atoms-label( label: "Email*", for: "emailinput")}}
    {{> atoms-textinput(type:"email", name: "emailinput",  placeholder: "" )}}
  </div>

  <div class="form-group">
    {{> atoms-btn( label: "Send reset link",styleModifier:"btn-primary", type: "submit")}}
  </div>
</form>
